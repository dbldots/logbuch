    //
       
        Create tabs with an icon and label, using the tabs-positive style. 
        Each tab's child <nav-view> directive will have its own 
        navigation history that also transitions its views in and out.
    ion-tabs.tabs-icon-top.tabs-default.tabs-dark
      // Pets Tab
      ion-tab(title='Aufzeichnen', icon='icon ion-arrow-shrink', href='#/tab/track')
        ion-nav-view(name='track-tab')
      // Adopt Tab
      ion-tab(title='Log', icon='icon ion-clipboard', href='#/tab/log')
        ion-nav-view(name='log-tab')
      // About Tab
      ion-tab(title='Eintragen', icon='icon ion-plus', href='#/tab/add')
        ion-nav-view(name='add-tab')
